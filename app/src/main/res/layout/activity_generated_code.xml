<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsandactivities.GeneratedCodeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/savedCardToolbar"
        android:layout_width="match_parent"
        android:theme="@style/CustomToolbarStyle"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/savedCardImage"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/saved_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savedCardToolbar"
        tools:ignore="ImageContrastCheck"
        tools:src="@drawable/ic_placeholder" />

    <ImageView
        android:id="@+id/generatedImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/saved_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savedCardImage"
        tools:ignore="ImageContrastCheck"
        />

    <TextView
        android:id="@+id/tvScannedCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Scanned code"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/generatedImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>